@model List<PersonalSite.Helper.MySearchUnit>
@{
    ViewBag.Title = "搜索";
    Random r = new Random();
    var num = r.Next(0, 11);
}
<!--Column-->
@Html.Action("Index", "Channel")

<div class="layui-container">
    <div class="layui-row layui-col-space15">
        <div class="layui-col-md8">
            <div class="fly-panel" style="margin-bottom: 0;">
                <ul class="fly-list">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <li>
                                <a href="#" class="fly-avatar">
                                    <img src="~/res/images/avatar/@(num).jpg" alt="程序员369">
                                </a>
                                <h2>
                                    <a class="layui-badge">文章</a>
                                    <a title="@item.title" href="/Art/@item.flag">@Html.Raw(item.title)</a>
                                </h2>
                                <div class="fly-list-info">
                                    @Html.Raw(item.content)
                                    @*@item.content*@
                                </div>
                                @*<div class="fly-list-info">
                                        <a href="#" link>
                                            <cite>@User.Identity.GetUserName()</cite>
                                        </a>
                                        <span>
                                            @item.PostDate.ToString("yyyy-MM-dd")
                                        </span>

                                        <span class="fly-list-kiss layui-hide-xs" title="悬赏飞吻"><i class="iconfont icon-kiss"></i> @item.DingCount</span>
                                        <!--todo:此文章的回答总数-->
                                        <span class="fly-list-nums"><i class="iconfont icon-pinglun1" title="回答"></i> @item.ComCount</span>
                                    </div>
                                    <div class="fly-list-badge">
                                        <!--存放置顶或者精贴-->
                                    </div>*@
                            </li>

                        }
                    }
                </ul>
                <!--没有数据给出提示-->
                @*<div class="fly-none">没有相关数据</div>*@
                <div style="border-top: 1px dotted #e2e2e2; text-align: center;" id="page">
                    <!--分页-->
                    @Html.Raw(ViewBag.PagerHtml)
                </div>

            </div>
        </div>
        <div class="layui-col-md4">
            @Html.Action("ListHot", "Article")
            <div class="fly-panel" style="padding: 20px 0; text-align: center;">

            </div>
        </div>
    </div>
</div>